{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "**/*.ts", "jest.config.js", "jest.setup.js"],
  "exclude": ["node_modules"]
}
